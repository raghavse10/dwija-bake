// Prisma preferred over TypeORM: better DX, type-safe client, simpler migrations.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ping {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
}
