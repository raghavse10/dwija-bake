# Root / shared env (copy to .env and adjust)
# Database (used by api via DATABASE_URL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dwijabake
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/dwijabake

# Ports
API_PORT=3001
WEB_PORT=3000

# CORS (allowed origin for api; web app URL in dev)
CORS_ORIGIN=http://localhost:3000

# Next.js public API URL (used by web to call api)
NEXT_PUBLIC_API_URL=http://localhost:3001
